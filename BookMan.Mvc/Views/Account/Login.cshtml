@model BookMan.Mvc.Models.UserToLogin

@{
    ViewData["Title"] = "Login";
}

<form method="post">
    <div class="form-group">
        <label asp-for="UserName" class="col-form-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="UserName" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="col-form-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Password" />
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Log in" class="btn btn-sm btn-outline-primary col-md-2" />
    </div>
</form>
